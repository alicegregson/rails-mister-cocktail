<!-- Cocktail Index -->

<%= link_to "Add Cocktail", new_cocktail_path, class: "add-cocktail" %>



  <div class="card-grid">
    <%@cocktails.each do |cocktail|  %>
      <div class="index_card">
        <% if cocktail.photo.attached?  %>
          <%= cl_image_tag cocktail.photo.key, height: 200, width: 150, crop: :fill %>
        <% end %>
        <h4><%= cocktail.name %></h4>

        <div class="detail-container">
          <%= link_to "Details", cocktail_path(cocktail), class: "edit-button", id: "detail-button" %>
        </div>
      </div>
   <% end %>
  </div>
